<div class="container">
  <div class="wrapper">
    <form method="post" name="Login_Form" class="form-signin">

      <h3 class="form-signin-heading">
        <%= title %>
      </h3>

      <% if (errors) { %>
      <% errors.forEach(function(error) { %>
      <p class="error-message">
        <%= error.msg %>
      </p>
      <% }); %>

      <% } %>
      <h3 class="input-text"><%- title === 'Login' ? 'Username' : 'New username' %></h3>
        <input id="<%= title === 'Login' ? '' : 'newUsername'  %>" type="text" class="form-control" name="<%= title==='Login' ? 'username' : 'newUsername' %>" />
        <hr>

        <h3 class="input-text">Password</h4>
          <input id="<%= title==='Login' ? '' : 'newPassword' %>" type="password" class="form-control" name="<%= title==='Login' ? 'password' : 'newPassword' %>" required="" />
          <hr>

          <% if (title !== 'Login') { %>
        <h3 class="input-text">Repeat password</h4>
          <input id="repeatPassword" type="password" class="form-control" name="repeatPassword" required="" />
          <hr>
          <% } %>

          <button class="butt" id="<%= title==='Login' ? 'login-btn' : 'create-account-btn' %>" name="Submit" value="Login" type="Submit"><%= title==='Login' ? 'Login' : 'Create account' %></button>

          <% if (title === 'Login') { %>
          <p class="or-sign-up">Or <strong><a id="sign-up-text" href="/sign-up">sign up</a></strong></p>
          <% } %>

</form>

  </div>
</div>
