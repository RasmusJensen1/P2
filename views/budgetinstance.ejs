<main>


  <div class="column">
    <div id="left-container">

      <div id="income-container">
        <h2>Total monthly income: <div class="tool-tip tool-tip-primary">? <span>Total monthly income is a total of all income streams per month. Work, freelance, SU etc.</span></div></h2>
        <input type="number" name="income" id="input-income">
        <hr>
      </div>

      <div id="slider-container">
      </div>
    </div>

    <div id="chart-container">
      <div id="chart-content">
        <canvas id="chart"></canvas>
      </div>
    </div>

  </div>
  <button onclick="postRequest()" id="save-budget-btn" class="butt butt-primary">Save</button>
  <a class="download-container butt butt-primary">
    <h3 id="download-text">Download</h3>
    <img src="/images/download.png" alt="Download" class="download-image" />
  </a>
  <div id="not-saved">
    <h1>Unsaved changes to budget!</h1>
  </div>

  <!-- Pop up to create a new expense -->
  <div class="form-popup" id="create-popup">
    <div class="form-container">

      <h2>Expense name</h2>
      <input type="text" placeholder="Enter name" id="expense-name" required>

      <h2>Cost</h2>
      <input type="number" placeholder="Enter amount" id="expense-cost" required>

      <button type="button" class="btn" id="create-expense-button" onclick="createExpense()">Create</button>
      <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
    </div>
  </div>

</main>