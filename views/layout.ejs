<!DOCTYPE html>
<html>
  <head>
    <title>Expensia</title>

    <link rel="stylesheet" href="/stylesheets/header.css" />
    <% switch(title) { case 'Home': %>
    <link rel="stylesheet" href="/stylesheets/home.css" />
    <% break; case 'Create_budget': %>
    <link rel="stylesheet" href="/stylesheets/uploadBudget.css" />
    <% break; case 'Info': %>
    <link rel="stylesheet" href="/stylesheets/info.css" />
    <% break; case 'My_budgets': %>
    <link rel="stylesheet" href="/stylesheets/mybudgets.css" />
    <% break; case 'Login': %>
    <link rel="stylesheet" href="/stylesheets/login.css" />
    <% break; case 'Sign up': %>
    <link rel="stylesheet" href="/stylesheets/login.css" />
    <% break; default: %> <% break; } %>
  </head>

  <body>
    <nav>
      <label id="logo">
        <a href="/home">Expensia</a>
      </label>
      <ul>
        <li class="<%- title === 'Create_budget' ? 'active-page' : '' %>">
          <a href="/create-budget">Create</a>
        </li>
        <li class="<%- title === 'My_budgets' ? 'active-page' : '' %>">
          <a href="/my-budgets">My budgets</a>
        </li>
        <li class="<%- title === 'Info' ? 'active-page' : '' %>">
          <a href="/info">Info</a>
        </li>
        <li id="login-button">
          <!-- Look in main.js for this button -->
        </li>
      </ul>
    </nav>

    <%- body %>
    
    <script src="/javascript/main.js"></script>
  </body>
</html>
